{
  "name": "react-app",
  "version": "0.2.0",
  "options": {
    "ui": ["react"],
    "api": ["indexedDB", "stub"],
    "db": ["indexedDB", "none"]
  },
  "allowedTypes": ["String"],
  "directives": [
    { "ui:react": { "copy": { "src": "react/base", "dest": "" } } },
    {
      "ui:react": {
        "loop": {
          "property": "models",
          "src": "react/modelComponents",
          "dest": "src/components"
        }
      }
    },
    {
      "api:stub": {
        "loop": {
          "property": "models",
          "src": "api/stub/api",
          "dest": "src/api"
        }
      }
    },
    {
      "api:indexedDB": {
        "loop": {
          "property": "models",
          "src": "api/indexedDb/api",
          "dest": "src/api"
        }
      }
    },
    {
      "db:indexedDB": {
        "copy": { "src": "db/indexedDb/db", "dest": "src/db" }
      }
    },
    {
      "db:indexedDB": {
        "loop": {
          "property": "models",
          "src": "db/indexedDb/loop",
          "dest": "src/db"
        }
      }
    },
    {
      "db:indexedDB": {
        "viewModel": { "packages": [{ "package": "idb", "version": "^6.1.2" }] }
      }
    }
  ]
}
