{
  "name": "react-app",
  "version": "0.5.2",
  "options": {
    "ui": ["react"],
    "api": ["indexedDB", "stub", "express", "none"],
    "db": ["indexedDB", "none"]
  },
  "allowedTypes": ["String", "Boolean"],
  "directives": [
    { "ui:react": { "copy": { "src": "react/base", "dest": "client" } } },
    {
      "ui:react": {
        "loop": {
          "property": "models",
          "src": "react/modelComponents",
          "dest": "client/src/components"
        }
      }
    },
    {
      "ui:react": {
        "viewModelTransform": {
          "path": "./react/viewModelTransform/addComponents.js",
          "method": "addComponents"
        }
      }
    },
    {
      "api:stub": {
        "loop": {
          "property": "models",
          "src": "api/stub/api",
          "dest": "client/src/api"
        }
      }
    },
    {
      "api:indexedDB": {
        "copy": { "src": "api/indexedDb/base", "dest": "client/src/api" }
      }
    },
    {
      "api:indexedDB": {
        "loop": {
          "property": "models",
          "src": "api/indexedDb/api",
          "dest": "client/src/api"
        }
      }
    },
    {
      "api:express": { "copy": { "src": "api/express/base", "dest": "server" } }
    },
    {
      "api:express": {
        "loop": {
          "property": "models",
          "src": "api/express/endpoints",
          "dest": "server/src/rest/endpoints"
        }
      }
    },
    {
      "api:express": {
        "copy": { "src": "api/express/client/api", "dest": "client/src/api" }
      }
    },
    {
      "api:express": {
        "loop": {
          "property": "models",
          "src": "api/express/client/models",
          "dest": "client/src/api/"
        }
      }
    },
    {
      "db:indexedDB": {
        "copy": { "src": "db/indexedDb/db", "dest": "client/src/db" }
      }
    },
    {
      "db:indexedDB": {
        "loop": {
          "property": "models",
          "src": "db/indexedDb/loop",
          "dest": "client/src/db"
        }
      }
    },
    {
      "db:indexedDB": {
        "viewModel": { "packages": [{ "package": "idb", "version": "^6.1.2" }] }
      }
    }
  ]
}
